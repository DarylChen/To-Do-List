<!DOCTYPE html>
<html lang="en">

<%- include('header'); -%>

<body>
    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>

    <div class="box">
        <% for (var i=0; i<newListItems.length; i++){ %>
        <div class="item">
            <input type="checkbox">
            <p><%= newListItems[i] %></p>
        </div>
        <% } %>

        <form action="/" method="post" class="item">
            <input type="text" name="item" placeholder="Please input you list item">
            <button type="submit" name="button" value=<%= listTitle %>>+</button>
        </form>
    </div>

</body>
<%- include('footer'); -%>

</html>